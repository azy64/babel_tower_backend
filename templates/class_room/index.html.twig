{% extends 'base.html.twig' %}

{% block title %}ClassRoom index{% endblock %}

{% block body %}
    <h1>ClassRoom index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>CreationClass</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for class_room in class_rooms %}
            <tr>
                <td>{{ class_room.id }}</td>
                <td>{{ class_room.nom }}</td>
                <td>{{ class_room.creationClass ? class_room.creationClass|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_class_room_show', {'id': class_room.id}) }}">show</a>
                    <a href="{{ path('app_class_room_edit', {'id': class_room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_class_room_new') }}">Create new</a>
{% endblock %}
